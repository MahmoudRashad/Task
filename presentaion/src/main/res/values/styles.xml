<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextInputStyleOutlined"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/simple_grey</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/warm_grey</item>
        <item name="hintTextColor">@color/warm_grey</item>
        <item name="android:textSize">12sp</item>
        <item name="colorControlNormal">@color/warm_grey</item>
        <item name="colorControlActivated">@color/warm_grey</item>
    </style>

    <style name="TextInputStyleOutlinedBorderless" parent="TextInputStyleOutlined">
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="GridRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>