<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
        >


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Information"
        android:textSize="26sp"

        android:fontFamily="@font/bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/serviceNameTL"
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:textColorHint="@color/warm_grey"
        app:boxBackgroundColor="@color/white"
        app:hintTextColor="@color/warm_grey"
        android:layout_marginTop="20dp"
      >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/serviceNameET"
            style="@style/medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            tools:text="fdnfk emklfd"
            android:textDirection="ltr"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/selectCategory"
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/serviceNameTL"
        android:textColorHint="@color/warm_grey"
        app:boxBackgroundColor="@color/white"
        app:hintTextColor="@color/warm_grey"
        android:layout_marginTop="20dp"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/selectCategoryET"
            style="@style/medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            tools:text="fdnfk emklfd"
            android:textDirection="ltr"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/selectSubCatTL"
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/selectCategory"
        android:textColorHint="@color/warm_grey"
        app:boxBackgroundColor="@color/white"
        app:hintTextColor="@color/warm_grey"
        android:layout_marginTop="20dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/selectSubCatET"
            style="@style/medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            tools:text="fdnfk emklfd"
            android:textDirection="ltr"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
